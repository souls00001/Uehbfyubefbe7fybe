local player = game.Players.LocalPlayer
local camera = workspace.CurrentCamera
local UIS = game:GetService("UserInputService")

-- Reference your actual slider TextBox
local slider = script.Parent:FindFirstChild("SliderTextBox") -- Adjust to your UI structure

local function updateFOV()
    local fov = tonumber(slider.Text)
    if fov then
        camera.FieldOfView = math.clamp(fov, 15, 120) -- Clamp to prevent extreme values
    end
end

slider.FocusLost:Connect(updateFOV) -- Update FOV when the player presses Enter or deselects the box
